#!/usr/bin/env bash

[ ! -n "$STACK_MYSQL_USERNAME" ] && STACK_MYSQL_USERNAME=$STACK_ADMIN_USERNAME
[ ! -n "$STACK_MYSQL_PASSWORD" ] && STACK_MYSQL_PASSWORD=$STACK_ADMIN_PASSWORD
[ ! -n "$STACK_MYSQL_ROOT_PASSWORD" ] && STACK_MYSQL_ROOT_PASSWORD=$STACK_ADMIN_PASSWORD

[ ! -n "$STACK_INFLUXDB_ORG" ]  && STACK_INFLUXDB_ORG=$STACK_ADMIN_ORG
[ ! -n "$STACK_INFLUXDB_USERNAME" ] && STACK_INFLUXDB_USERNAME=$STACK_ADMIN_USERNAME
[ ! -n "$STACK_INFLUXDB_PASSWORD" ] && STACK_INFLUXDB_PASSWORD=$STACK_ADMIN_PASSWORD

[ ! -n "$STACK_INFLUXDB_ADMIN_TOKEN" ] && STACK_INFLUXDB_ADMIN_TOKEN=$STACK_ADMIN_PASSWORD
[ ! -n "$STACK_GRAFANA_USERNAME" ] && STACK_GRAFANA_USERNAME=$STACK_ADMIN_USERNAME
[ ! -n "$STACK_GRAFANA_PASSWORD" ] && STACK_GRAFANA_PASSWORD=$STACK_ADMIN_PASSWORD
