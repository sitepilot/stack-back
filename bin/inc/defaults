#!/bin/bash

# General
export STACK_NAME="STACK"
export STACK_ADMIN_USERNAME="admin"
export STACK_ADMIN_PASSWORD=""
export STACK_ADMIN_EMAIL="admin@stack.local"
export STACK_ADMIN_ORG="Stack"

# Backup
export STACK_BACKUP_DIR=""
export STACK_BACKUP_CLEANUP_DAYS="30"

# MySQL
export STACK_MYSQL_ENABLED=false
export STACK_MYSQL_DATABASE="stack"
export STACK_MYSQL_ROOT_PASSWORD=${STACK_ADMIN_PASSWORD}
export STACK_MYSQL_USERNAME=${STACK_ADMIN_USERNAME}
export STACK_MYSQL_PASSWORD=${STACK_ADMIN_PASSWORD}

# InfluxDB
export STACK_INFLUXDB_ENABLED=false
export STACK_INFLUXDB_BUCKET="stack"
export STACK_INFLUXDB_ORG=${STACK_ADMIN_ORG}
export STACK_INFLUXDB_USERNAME=${STACK_ADMIN_USERNAME}
export STACK_INFLUXDB_PASSWORD=${STACK_ADMIN_PASSWORD}
export STACK_INFLUXDB_ADMIN_TOKEN=${STACK_ADMIN_PASSWORD}

# Grafana
export STACK_GRAFANA_ENABLED=false
export STACK_GRAFANA_USERNAME=${STACK_ADMIN_USERNAME}
export STACK_GRAFANA_PASSWORD=${STACK_ADMIN_PASSWORD}

# Redis
export STACK_REDIS_ENABLED=false

# Mailhog
export STACK_MAILHOG_ENABLED=false

# Node-RED
export STACK_NODERED_ENABLED=false

# PhpMyAdmin
export STACK_PHPMYADMIN_ENABLED=false
